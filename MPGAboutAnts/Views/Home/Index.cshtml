@{
	ViewData["Title"] = "Карта";
}

<link rel="stylesheet" href="~/css/HexStyles.css" asp-append-version="true" />
<div>
	<div class="hex-grid" id="map"></div>
	<div style="float:left; display:inline-block">
		<div class="check">
			<div class="form-check form-switch">
				<input class="form-check-input" type="checkbox" id="flexSwitchCheck">
				<label id="checkLabel" class="form-check-label" for="flexSwitchCheck">Режим игры</label>
			</div>
		</div>
		<div style="display: block; overflow:clip;" id="creationSettings" hidden>
			<div class="input-group mb-3" id="hexSelect">
				<span class="input-group-text">Тип местности:</span>
				<select class="form-select" required id="hexType">
					<option value="change" selected>--Выберите тип--</option>
				</select>
			</div>
			<div>
				<div class="input-group mb-3">
					<span class="input-group-text">Название карты:</span>
					<input type="text" class="form-control" required id="mapName" />
				</div>
				<button id="saveBtn" type="button" class="btn btn-primary">Сохранить карту</button>
			</div>
			<div class="input-group mb-3" id="mapSelect" style="margin-top: 5%">
				<span class="input-group-text">Карта:</span>
				<select class="form-select" required id="mapNames">
					<option value="change" selected>--Выберите карту--</option>
				</select>
				<button id="loadBtn" type="button" class="btn btn-primary">Загрузить карту</button>
			</div>
		</div>
	</div>
</div>
<script src="~/js/hexScripts.js"></script>
<script src="~/js/interfaceScript.js"></script>
